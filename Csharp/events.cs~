using System;

public delegate void MyDel(int i);

class Program
{   
    static Raiser r;
    
    static void Main()
    {
        r = new Raiser();
        
        r.Raise(3);
        
        new Listener(r);
        
        r.Raise(3);
    }
}

public class Raiser
{
    private event MyDel Handler;
    
    public void Giveittome(MyDel d) { Handler += d; }
    
    public void Raise(int i)
    { 
        if (Handler != null) Handler(i);
        
        else Console.WriteLine("No subscribers yet!");
    }
}

public class Listener
{
    private void Fun1(int x) { Console.WriteLine("Double = {0}", x+x); }
    private void Fun2(int x) { Console.WriteLine("Square = {0}", x*x); }
    
    public Listener(Raiser r)
    {
        r.Giveittome(Fun1);
        r.Giveittome(Fun2);
    }
}
