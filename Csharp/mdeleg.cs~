using System;

delegate void Sajt(int x, int y);

class MainClass //Member names cannot be the same as their enclosing type!
{
    static Fasz fasz;
    static Sajt sajt;
    
    static void Main()
    {   
        fasz = new Fasz();
        
        sajt = fasz.GetMethod();
        
        sajt(3,2);
    }
}

class Fasz
{
    private void plus(int x, int y) { Console.WriteLine(x+y); }
    private void minus(int x, int y) { Console.WriteLine(x-y); }
    
    Sajt operate;
    
    public Sajt GetMethod() { return operate; }
    
    public Fasz()
    {
        operate += plus;
        operate += minus;
    }
}
